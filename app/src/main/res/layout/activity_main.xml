<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <!-- Search view for filtering list view -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/idSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        app:queryHint="Fill in a movie you like..."
        android:textAppearance="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/idSV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:background="#000000"
        android:id="@+id/linearLayout0">

        <ImageView
            android:id="@+id/moviePoster"
            android:layout_width="96dp"
            android:layout_height="128dp"
            android:src="@drawable/ingloriousbasterdsimage"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/movieName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inglorious Basterds"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@android:color/white"
            android:background="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayout0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:background="#000000"
        android:id="@+id/linearLayout1">

        <ImageView
            android:id="@+id/moviePoster1"
            android:layout_width="96dp"
            android:layout_height="128dp"
            android:src="@drawable/ingloriousbasterdsimage"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/movieName1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inglorious Basterds"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@android:color/white"
            android:background="#000000" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:background="#000000"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/moviePoster2"
            android:layout_width="96dp"
            android:layout_height="128dp"
            android:src="@drawable/ingloriousbasterdsimage"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/movieName2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inglorious Basterds"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@android:color/white"
            android:background="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:background="#000000"
        android:id="@+id/linearLayout3">

        <ImageView
            android:id="@+id/moviePoster3"
            android:layout_width="96dp"
            android:layout_height="128dp"
            android:src="@drawable/ingloriousbasterdsimage"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/movieName3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inglorious Basterds"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@android:color/white"
            android:background="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:background="#000000"
        android:id="@+id/linearLayout4">

        <ImageView
            android:id="@+id/moviePoster4"
            android:layout_width="96dp"
            android:layout_height="128dp"
            android:src="@drawable/ingloriousbasterdsimage"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/movieName4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inglorious Basterds"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@android:color/white"
            android:background="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>